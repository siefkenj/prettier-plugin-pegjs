        "babel-loader": "8.2.5",
        "eslint": "^8.25.0",
        "jest": "^29.1.2",
        "jsdom": "^20.0.1",
        "mkdirp": "1.0.4",
        "pegjs": "0.10.0",
        "pegjs-loader": "^0.5.6",
        "resolve-cwd": "^3.0.0",
        "webpack": "5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "jest": {
        "transform": {
